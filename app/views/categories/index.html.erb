<h1>Manage Categories</h1>
<p class="link"><%= link_to 'Add Category', new_category_path %>&nbsp;&nbsp;<%= link_to 'Back', transactions_path %></p>
<table width="40%">
  <thead>
    <tr>
      <th class="c-id">ID</th>
      <th class="c-description">Name</th>
      <th class="c-type">Type</th>
      <th class="c-hidden"></th>
    </tr>
  </thead>
  <tbody>
    <% counter = 1 %>
    <% @categories.each do |category| %>
      <% if counter.even? %>
      <tr class="alt">
      <% else %>
      <tr>
      <% end %>
        <td class="c-id"><%= category.id %></td>
        <td><%= category.name %></td>
        <% if category.credit? %>
            <td>Income</td>
        <% else %>
            <td>Expense</td>
        <% end %>
        <td class="c-actions">
          <%= link_to 'Edit', edit_category_path(category) %>
          &nbsp; &nbsp;
          <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% counter += 1 %>
    <% end %>
  </tbody>
</table>


